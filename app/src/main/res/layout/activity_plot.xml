<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) máscara sobre gris -->
    <ImageView
        android:id="@+id/imgSegOverlay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:contentDescription="Máscara sobre gris"/>

    <!-- 2) contornos dermatomas -->
    <ImageView
        android:id="@+id/imgDermContours"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:scaleType="fitCenter"
        android:contentDescription="Contornos de dermatomas"/>

    <!-- 3) lista desplazable de temperaturas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/tempsContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <!-- 4) Botón para resetear y escoger otra -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva imagen"
        android:layout_margin="16dp"/>
</LinearLayout>
