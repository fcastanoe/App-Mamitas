<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENIDO PRINCIPAL -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TOOLBAR -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CF56ABEC"
            app:title="Análisis de Dermatomas"
            app:titleCentered="true"
            app:navigationIcon="@drawable/ic_menu"
            app:menu="@menu/toolbar_menu"/>

        <!-- FONDO SEMITRANSPARENTE -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/bg_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/captura"
                android:scaleType="centerCrop"
                android:alpha="0.6"/>

            <!-- NUEVO CONTENIDO -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <!-- 1) Botón Seleccionar Imagen centrado -->
                <Button
                    android:id="@+id/btnSelectImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seleccionar Imagen"
                    android:layout_gravity="center_horizontal"/>

                <!-- 2) PhotoView (zoomable) ocupa la mitad de la pantalla -->
                <com.github.chrisbanes.photoview.PhotoView
                    android:id="@+id/imgSelected"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:visibility="visible"
                    android:layout_marginTop="16dp"/>

                <!-- 3) Contenedor de resultados y acciones -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:id="@+id/tvMaxTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Max: --"
                        android:textSize="18sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/tvMinTemp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Min: --"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@android:color/holo_red_dark"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/btnModifyManual"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Modificar manualmente"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>

                    <Button
                        android:id="@+id/btnStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Start"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="16dp"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <!-- DRAWER LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#CF56ABEC"
        app:itemTextAppearance="@style/DrawerItemStyle"
        app:itemIconTint="@android:color/white"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/drawer_menu"/>
</androidx.drawerlayout.widget.DrawerLayout>