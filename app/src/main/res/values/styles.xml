<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#FF56ABEC</item>
        <item name="colorPrimaryDark">#FF5680E8</item>
        <item name="colorAccent">#FF56ABEC</item>
        <item name="materialButtonStyle">@style/MyButton</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DrawerItemStyle">
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#FF56ABEC</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/black</item> <!-- Cambiá si usás fondo oscuro -->
        <item name="android:background">?attr/colorSurface</item>
    </style>

</resources>
