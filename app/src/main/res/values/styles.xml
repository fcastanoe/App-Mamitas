<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#56ABEC</item>
        <item name="colorPrimaryDark">#5680E8</item>
        <item name="colorAccent">#CF56ABEC</item>
        <item name="materialButtonStyle">@style/MyButton</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DrawerItemStyle">
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#8056ABEC</item>
        <item name="android:textColor">#888888</item>
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
